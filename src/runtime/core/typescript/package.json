{
  "name": "@mcpmesh/core",
  "version": "0.8.0",
  "description": "MCP Mesh Rust core bindings for Node.js",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "mcp-mesh-core",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --cargo-cwd .. --features typescript --cargo-flags=\"--no-default-features\"",
    "build:debug": "napi build --platform --cargo-cwd .. --features typescript --cargo-flags=\"--no-default-features\"",
    "prepublishOnly": "napi prepublish -t npm",
    "universal": "napi universal",
    "version": "napi version"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-mesh/mcp-mesh"
  },
  "keywords": [
    "mcp",
    "mesh",
    "agent",
    "napi",
    "rust"
  ]
}
