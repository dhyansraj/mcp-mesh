# Python MCP Mesh Agent - System Agent
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt /app/requirements.txt

# Copy the Python MCP Mesh library source
COPY src/runtime/python/ /app/mcp-mesh-python/

# Install dependencies from requirements.txt and the MCP Mesh library
RUN pip install --no-cache-dir -r /app/requirements.txt && \
    cd /app/mcp-mesh-python && \
    pip install --no-cache-dir -e .

# Create directories
RUN mkdir -p /data /etc/mcp-mesh /app/agents

# Copy the system_agent script (k8s version)
COPY k8s/examples/system_agent_k8s.py /app/agent.py

# Non-root user
RUN useradd -m -u 1000 mcp && \
    chown -R mcp:mcp /app /data /etc/mcp-mesh

USER mcp

# Set Python path to include our library
ENV PYTHONPATH=/app/mcp-mesh-python/src:$PYTHONPATH

EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the agent by default
CMD ["python", "/app/agent.py"]
