# Helm values for deploying {{ .Name }} with mcp-mesh-agent chart
# Usage: helm install {{ .Name }} mcp-mesh/mcp-mesh-agent -f helm-values.yaml

image:
  repository: your-registry/{{ .Name }}
  tag: latest
  pullPolicy: IfNotPresent

agent:
  name: {{ .Name }}
  port: {{ .Port }}

resources:
  limits:
    cpu: 1000m
    memory: 1Gi
  requests:
    cpu: 200m
    memory: 256Mi

# Enable mesh connectivity for cross-agent calls
mesh:
  enabled: true
  registryUrl: http://mcp-mesh-registry:8000

# LLM agent typically needs API keys
env:
  - name: ANTHROPIC_API_KEY
    valueFrom:
      secretKeyRef:
        name: llm-secrets
        key: anthropic-api-key
        optional: true
  - name: OPENAI_API_KEY
    valueFrom:
      secretKeyRef:
        name: llm-secrets
        key: openai-api-key
        optional: true

# Optional: Configure additional secrets
secrets: []
