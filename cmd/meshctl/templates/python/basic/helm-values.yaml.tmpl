# Helm values for deploying {{ .Name }} with mcp-mesh-agent chart
# Usage: helm install {{ .Name }} oci://ghcr.io/dhyansraj/mcp-mesh/mcp-mesh-agent --version 0.7.1 -f helm-values.yaml

image:
  repository: your-registry/{{ .Name }}
  tag: latest
  pullPolicy: IfNotPresent

agent:
  name: {{ .Name }}
  port: {{ .Port }}

resources:
  limits:
    cpu: 500m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 128Mi

# Enable if you need to connect to other mesh agents
mesh:
  enabled: true
  registryUrl: http://mcp-mesh-registry:8000

# Optional: Configure environment variables
env: []
  # - name: LOG_LEVEL
  #   value: "INFO"

# Optional: Configure secrets
secrets: []
