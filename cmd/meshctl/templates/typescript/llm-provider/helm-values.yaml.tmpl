# Helm values for deploying {{ .Name }} with mcp-mesh-agent chart
# Usage: helm install {{ .Name }} oci://ghcr.io/dhyansraj/mcp-mesh/mcp-mesh-agent -f helm-values.yaml

image:
  repository: your-registry/{{ .Name }}
  tag: "v1.0.0"
  pullPolicy: IfNotPresent

agent:
  name: {{ .Name }}
  runtime: typescript

resources:
  limits:
    cpu: 1000m
    memory: 1Gi
  requests:
    cpu: 200m
    memory: 256Mi

mesh:
  enabled: true
  registryUrl: http://mcp-core-mcp-mesh-registry:8000

env:
{{ if contains .Model "anthropic" }}
  - name: ANTHROPIC_API_KEY
    valueFrom:
      secretKeyRef:
        name: llm-secrets
        key: anthropic-api-key
{{ else if contains .Model "openai" }}
  - name: OPENAI_API_KEY
    valueFrom:
      secretKeyRef:
        name: llm-secrets
        key: openai-api-key
{{ end }}

secrets: []
